<h1>Books</h1>

 <h4>Title</h4> 
 
 
   <% @books.each do |book| %>


    <span>
     <%= link_to book.title, book_path(book.id) %>
    </span>
   <% end %>

    
 
 <h4>Body</h4>
   <% @books.each do |book| %>
   
    <span>
      <%= book.body %>
    </span>

   <% end %>

